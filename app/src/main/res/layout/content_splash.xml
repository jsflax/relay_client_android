<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jsflax.relay.MasterActivity"
    tools:showIn="@layout/activity_splash"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav" />
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin28"
        android:elevation="@dimen/margin8"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:weightSum="3">
        <ImageButton
            android:id="@+id/nav_channels_button"
            android:src="@drawable/ic_forum_24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/ic_ripple_blue"/>
        <ImageButton
            android:id="@+id/nav_chat_button"
            android:src="@drawable/ic_chat_24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/ic_ripple_blue"/>
        <ImageButton
            android:id="@+id/nav_user_button"
            android:src="@drawable/ic_person_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_ripple_blue"/>
    </LinearLayout>
</RelativeLayout>
